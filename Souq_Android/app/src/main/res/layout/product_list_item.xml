<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/dimen200dp"
    android:layout_height="@dimen/dimen250dp"
    card_view:cardCornerRadius="@dimen/dimen10dp"
    card_view:cardElevation="@dimen/dimen1dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="@dimen/dimen1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ProductImage"
            android:layout_width="@dimen/dimen100dp"
            android:layout_height="@dimen/dimen100dp"
            android:layout_margin="@dimen/dimen10dp"
            android:layout_gravity="center"
            android:contentDescription="@string/product"
            android:src="@drawable/samsung_galaxy_a70" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen28dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/samsung_galaxy_a70"
            android:textSize="@dimen/dimen18sp" />

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen28dp"
            android:textColor="@color/black"
            android:text="@string/_5399_egp"
            android:textStyle="bold"
            android:textSize="@dimen/dimen18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="@dimen/dimen30dp"
                android:layout_height="@dimen/dimen30dp"
                android:layout_margin="@dimen/dimen20dp"
                android:contentDescription="@string/share_product"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="@dimen/dimen30dp"
                android:layout_height="@dimen/dimen30dp"
                android:layout_margin="@dimen/dimen20dp"
                android:contentDescription="@string/add_to_cart"
                android:src="@drawable/ic_add_shopping_cart" />

            <ImageView
                android:id="@+id/imgFavourite"
                android:layout_width="@dimen/dimen30dp"
                android:layout_height="@dimen/dimen30dp"
                android:layout_margin="@dimen/dimen20dp"
                android:contentDescription="@string/add_to_favourite"
                android:src="@drawable/ic_favorite_border" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>